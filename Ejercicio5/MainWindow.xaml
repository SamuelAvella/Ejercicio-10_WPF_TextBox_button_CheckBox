<Window x:Class="Ejercicio5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label FontWeight="Bold" >Módulos que pienso aprobar</Label>
            <CheckBox Name="cbTodos" IsThreeState="True" Checked="cb_TodosHaCambiado" Unchecked="cb_TodosHaCambiado">
                Todos los módulos
            </CheckBox>
            <StackPanel Margin="10">
                <CheckBox Name="cbDI" Checked="cb_SimpleHaCambiado" Unchecked="cb_SimpleHaCambiado">
                    <TextBlock>Desarrollo de interfaces</TextBlock>
                </CheckBox>
                <CheckBox Name="cbSGE" Checked="cb_SimpleHaCambiado" Unchecked="cb_SimpleHaCambiado">
                    <TextBlock>Sistemas de Gestión Empresarial</TextBlock>
                </CheckBox>
                <CheckBox Name="cbAD" Checked="cb_SimpleHaCambiado" Unchecked="cb_SimpleHaCambiado">
                    <TextBlock>Acceso a Datos</TextBlock>
                </CheckBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
